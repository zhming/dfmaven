<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="tree" extends="default" namespace="/backend">
        <!--文件柜列表-->
		<action name="yuitree" class="com.gihow.sitemanager.SiteTree">
			<result name="success" type="redirect">
				/module/main.jsp
			</result>
			<result name="error" type="velocity">/errors/404.jsp</result>
		</action>
	</package>

	<!--Security - Login namespace="/backend/user" -->
	<package name="security" extends="default" namespace="/">
		<action name="index" class="com.gihow.security.login.LoginForm">
			<result name="login" type="redirect">
			    login.jsp
			</result>
			<result name="continue" type="redirect">
				../yuitree.action
			</result>
			<result name="redirect" type="redirect">
				../../${redirectUri}
			</result>
			<result name="error">/errors/notfound.vm</result>
		</action>

		<action name="login" class="com.gihow.security.login.Login">
			<result name="success" >
                /module/main.jsp
			</result>
			<result name="input">
                login.jsp
			</result>
			<result name="error">/errors/404.jsp</result>
		</action>

		<action name="logout" class="com.gihow.security.login.Logout">
			<result name="success" type="redirect">index.action</result>
		</action>
		<action name="signup" class="com.gihow.security.login.Signup">
			<result name="success" type="redirect">/</result>
			<result name="input">signup.jsp</result>
			<result name="error">/errors/404.jsp</result>
		</action>
	</package>

	

</struts>